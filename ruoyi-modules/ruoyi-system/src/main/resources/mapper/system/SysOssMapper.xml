<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="org.dromara.system.mapper.SysOssMapper">

    <resultMap type="org.dromara.system.domain.SysOss" id="SysOssResult">
        <id property="ossId" column="oss_id"/>
        <result property="fileName" column="file_name"/>
        <result property="originalName" column="original_name"/>
        <result property="fileSuffix" column="file_suffix"/>
        <result property="url" column="url"/>
        <result property="service" column="service"/>
        <result property="size" column="size"/>
        <result property="projectId" column="project_id"/>
        <result property="projectName" column="project_name"/>
        <result property="fileType" column="file_type"/>
        <result property="createBy" column="create_by"/>
        <result property="createTime" column="create_time"/>
        <result property="updateBy" column="update_by"/>
        <result property="updateTime" column="update_time"/>
    </resultMap>

    <sql id="selectOssVo">
        SELECT o.oss_id,
               o.file_name,
               o.original_name,
               o.file_suffix,
               o.url,
               o.service,
               o.size,
               o.project_id,
               p.project_name,
               o.file_type,
               o.create_by,
               o.create_time,
               o.update_by,
               o.update_time
        FROM sys_oss o
        LEFT JOIN os_project p ON o.project_id = p.project_id
    </sql>

    <select id="selectOssList" parameterType="org.dromara.system.domain.SysOss" resultMap="SysOssResult">
        <include refid="selectOssVo"/>
        <where>
            <if test="fileName != null and fileName != ''">
                AND o.file_name like concat('%', #{fileName}, '%')
            </if>
            <if test="originalName != null and originalName != ''">
                AND o.original_name like concat('%', #{originalName}, '%')
            </if>
            <if test="projectId != null">
                AND o.project_id = #{projectId}
            </if>
            <if test="fileType != null and fileType != ''">
                AND o.file_type = #{fileType}
            </if>
            <if test="params.beginTime != null and params.beginTime != ''">
                AND o.create_time &gt;= #{params.beginTime}
            </if>
            <if test="params.endTime != null and params.endTime != ''">
                AND o.create_time &lt;= #{params.endTime}
            </if>
        </where>
        ORDER BY o.create_time DESC
    </select>

</mapper>
